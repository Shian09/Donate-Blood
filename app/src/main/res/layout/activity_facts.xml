<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Facts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/backgroundcolor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important Facts to Know:"
                android:textStyle="bold"
                android:textColor="#F00B5A"
                android:textSize="25sp"
                android:paddingTop="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/backgroundcolor"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="After how many days blood can be donated?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">120 days"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="What is the minimum age to donate blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">18 years"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="What is the minimum weight to donate blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">47 kg"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="Is there any side effect in case of donating blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">No, there is no side effect."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="How much blood is taken during blood donation?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">380 mL - 480mL"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="How much time does it take to donate blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">5 to 7 minutes(Max 15 minutes)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is there any chance of fainting for donating blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">No, but rest must be taken after blood donation."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="What is the process of taking blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text="@string/ans_to_process"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is there any chance of infection or clotting blood or bloating hand for donating blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">It can be said that there is no chance of such."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is donating blood allowed after having alcohol?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">No, not for 24hrs."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is donating blood allowed after taking anti-biotic?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">No. It has to be after 7 days."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is donating blood allowed for those people who have blood pressure?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">Yes if it is in control."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="Is donating blood allowed if baby is breastfed?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">Not if the baby only capable of being breastfed."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="After how many days mother can donate blood after giving birth to a child?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">15 months"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Is donating blood allowed while having cough/fever?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">No while having germs inside."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Is donating blood allowed while having birth controlling pills?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text=">Yes"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Can diabetic patients donate blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">No. But they can in special cases."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:text="Can blood be donated after taking vaccine for disease?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text=">No. It has to be after minimum of 4 weeks."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="What should be done before donating blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:paddingLeft="5dp"
                        android:textSize="18sp"
                        android:text="@string/ans_to_shoulddo"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:text="What should be done after donating blood?"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#353232"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:text="@string/ans_to_shoulddoafter"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>