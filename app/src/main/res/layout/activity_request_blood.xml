<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestBlood"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">


        <ImageButton
            android:id="@+id/homeButtonRequestBlood"
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_home_black_24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="350px"
            android:layout_height="400px"
            android:src="@drawable/doctor"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/requestBloodText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:hint="Name, Blood Group, Hospital, Area, District, Contact Number" />

            <Button
                android:id="@+id/requestButtonRequestBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Request"
                android:layout_marginLeft="161dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Request:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/showMyRequestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="There is no request of yours."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"/>

            <Button
                android:id="@+id/deleteRequestButtonRequestBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Delete"
                android:layout_marginLeft="161dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>